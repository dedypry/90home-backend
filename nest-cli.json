{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/backend/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/backend/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/backend",
  "projects": {
    "backend": {
      "type": "application",
      "root": "apps/backend",
      "entryFile": "main",
      "sourceRoot": "apps/backend/src",
      "compilerOptions": {
        "tsConfigPath": "apps/backend/tsconfig.app.json"
      }
    },
    "cron-job": {
      "type": "application",
      "root": "apps/cron-job",
      "entryFile": "main",
      "sourceRoot": "apps/cron-job/src",
      "compilerOptions": {
        "tsConfigPath": "apps/cron-job/tsconfig.app.json"
      }
    }
  }
}